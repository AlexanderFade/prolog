% Лабораторная 2.6 a)
имеет('Иван', rub(10000)).
имеет('Иван', 'телевизор').
имеет('Иван', машина(волга, вишневая)).
имеет('Иван', 'магнитофон').
имеет('Петр', rub(5000)).
имеет('Петр', 'телевизор').
имеет('Петр', 'холодильник').
имеет('Николай', rub(20000)).
имеет('Николай', 'телевизор').
% Лабораторная работа 2.6 h)
% Задать правило:
% У жены есть все, что есть у мужа.
имеет(Жена, Что):- жена(Жена, Муж), имеет(Муж, Что).

% Лабораторная 2.6 b)
% Что имеет Петр?
% имеет('Петр', Что).
%
% Кто имеет 10000 рублей?
% имеет(Кто, rub(10000)).
%
% Кто что имеет?
% имеет(Кто, Что).
%
% Какие вещи имеет Иван, которых нет у Николая? (Деньги - не вещь).
деньги(rub(_)).
вещь(А):-not(деньги(А)).
% имеет('Иван', Что), not(имеет('Николай', Что)), вещь(Что).
%
% Лабораторная 2.6 c)
% Добавить факты
цена(машина(волга,_), rub(32000)).
цена('телевизор', rub(8400)).
цена('холодильник', rub(4200)).
цена('магнитофон', rub(3500)).
цена('видео', rub(12000)).
цена('приемник', rub(1300)).
цена('часы', rub(500)).

% Лабораторная 2.6 d)
% Запросы:
% Может ли Петр купить видео?
может_купить(А, С):-имеет(А, rub(В)), цена(С, rub(Г)), Г =< В.
% У кого больше всего денег?
самый_богатый(Кто):-имеет(А, rub(Й)), имеет(Б, rub(Ц)), имеет(В, rub(У)), ((Кто=А, Й>Ц, Й>У);(Кто=Б,Ц>Й, Ц>У);( Кто=В,У>Й,У>Ц)).

% Лабораторная 2.6 e)
% Ввести правило:
% Некто может купить вещь, если у него хватит денег и этой вещи у него
% нет.
может_купить_2(А, С):-имеет(А, rub(В)), цена(С, rub(Г)), Г=<В, not(имеет(А, С)).

% Лабораторная 2.6 f)
% Запросы:
% Что может купить Николай?
% может_купить('Николай', Что).
% может_купить_2('Николай', Что).
%
% Что может купить Николай из того, что имеет Иван?
% может_купить('Николай', Что), имеет('Иван', Что).
% может_купить_2('Николай', Что), имеет('Иван', Что).

% Лабораторная 2.6 g)
% Добавить факты:
жена('Анна', 'Николай').
жена('Мария','Иван').
жена('Ольга','Петр').
% Лабораторная 2.6 i)
% Запросы:
% Имеет ли Мария машину?
% имеет('Мария', машина(_,_)).
%
% Что может купить Анна, чего не имеет Мария?
% может_купить('Анна', Что), not(имеет('Мария', Что)).
