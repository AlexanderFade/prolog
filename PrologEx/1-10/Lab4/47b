животное(утка).
животное(орел).
животное(буревестник).
живет(зебра,на_земле).
живет(собака,на_земле).
живет(карп,в_воде).
живет(кит,в_воде).
живет(кошка,X):-живет(собака,X).
живет(крокодил,в_воде).
живет(крокодил,на_земле).
живет(лягушка,в_воде).
живет(лягушка,на_земле).
живет(утка,в_воде).
живет(утка,на_земле).
живет(утка,в_воздухе).
живет(орел,в_воздухе).
живет(орел,на_земле).
живет(буревестник,в_воде).
живет(буревестник,в_воздухе).
живет_хотябы_две(X):-животное(X),жд(X).
жд(X):-[!живет(X,Y),живет(X,Z),Y\=Z!].
живет_одна_среда(X):-живет(X,_),not(живет_хотябы_две(X)).
живет_в_трех(X):-живет(X,Y),живет(X,Z),живет(X,N),Y\=Z,Y\=N,Z\=N.
живет_ровно_две(X):-живет_хотябы_две(X),not(живет_в_трех(X)).
