имеет('Иван',магнитофон).
имеет('Петр',rub(5000)).
имеет('Петр',телевизор).
имеет('Петр',холодильник).
имеет('Коля',rub(20000)).
имеет('Коля',телевизор).
цена('Волга',32000).
цена(телевизор,8400).
цена(холодильник,4200).
цена(магнитофон,3500).
цена(видео,12000).
цена(приемник,1300).
цена(часы,500).
петр_может_купить(видео):-имеет('Петр',rub(Y)),цена(видео,Z),Y>Z.
самый_богатый(X):-имеет(X,rub(Y)),имеет(X1,rub(Y1)),имеет(X2,rub(Y2)),X\=X1,X\=X2,X1\=X2,Y>Y1,Y>Y2.
может_купить(X,Y):-not(имеет(X,Y)),имеет(X,rub(Z)),цена(Y,Z1),Z>Z1.
